{% layout none %}
<!DOCTYPE html>
<html>

<head>
  <title>Please Log In</title>
  <style type="text/css">
    body{
    	font-family: -apple-system,BlinkMacSystemFont,Segoe UI,Helvetica,Arial,sans-serif;
      color: #50b848;
      padding: 0;
      margin: 0;
    }
    #container{
    	text-align: center;
    	min-height: 100vh;
      	display: table;
      margin: 0 auto;
      vertical-align: middle;
    }
    
    #login{
   		display: table-cell;
      vertical-align: middle;
      padding: 20px;
    }
    
    input{
      width: 260px;
      height: 40px;
      border-radius: 4px;
      border: none;
      padding: 0 15px;
      box-shadow: inset 0 0 0 1px #ccc;
      margin: 0 auto 10px;
      outline: none;
    }
    
    input:focus{
    	box-shadow: inset 0 0 0 2px #50b848;
    }
    
    input.btn{
    	background: #333;
      color: #fff;
      font-size: 16px;
      font-weight: 400;
      box-shadow: none !important;
      text-transform: uppercase;
      width: 120px;
    }
    
    input.btn:hover{
    	cursor: pointer;
      	opacity: 0.8;
    }
    
    ul{
    	padding: 0;
    	list-style: none;
      color: #999;
    }
  </style>
</head>
<body>

  <div id='container'>
    <div id='login'>
      <div>
        <h1>Looks like you caught us changing!</h1>
        <p>We're making some quick adjustments and will be back soon<br>If you're helping us freshen up, enter your password below</p>
      </div>
      {% form 'storefront_password' %}
        {{ form.errors | default_errors }}
        <input type='password' name='password' id='password' autofocus />
        <div class="actions">
          <input class="btn" name="commit" type="submit" value="Enter" />
        </div>
      {% endform %}
    </div>
  </div>
</body>
</html>
