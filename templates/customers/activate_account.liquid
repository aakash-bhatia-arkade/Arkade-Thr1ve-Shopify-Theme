<!-- templates/customers/activate_account.liquid -->

{% layout settings.customer_layout %}

<div class="container" id="page-content">
	<div class="row" id="page-title">
		<div class="col-sm-12">
			<h1>{{ 'customer.activate_account.title' | t }}</h1>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12">
			<p>{{ 'customer.activate_account.subtext' | t }}</p>
		</div>
		<div class="col-sm-4">
			{% form 'activate_customer_password' %}
			
				{{ form.errors | default_errors }}
				
				<div class="form-group">
					<label for="CustomerPassword" class="label--hidden">{{ 'customer.activate_account.password' | t }}</label>
					<input type="password" value="" name="customer[password]" id="CustomerPassword" class="form-control" placeholder="{{ 'customer.activate_account.password' | t }}">
				</div>
				
				<div class="form-group">
					<label for="CustomerPasswordConfirmation" class="label--hidden">{{ 'customer.activate_account.password_confirm' | t }}</label>
					<input type="password" value="" name="customer[password_confirmation]" id="CustomerPasswordConfirmation" class="form-control" placeholder="{{ 'customer.activate_account.password_confirm' | t }}">
				</div>
				
				<div class="form-group">
					<br />
					<input type="submit" class="btn" value="{{ 'customer.activate_account.submit' | t }}">
					<br /><br />
					<input type="submit" class="btn" name="decline" value="{{ 'customer.activate_account.cancel' | t }}">
				</div>
			
			{% endform %}
		</div>
	</div>
</div>