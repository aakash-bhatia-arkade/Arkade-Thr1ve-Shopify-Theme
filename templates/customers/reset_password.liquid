<!-- templates/customers/reset_password.liquid -->

{% layout settings.customer_layout %}

<div class="container" id="page-content">
	<div class="row" id="page-title">
		<div class="col-sm-12">
			<h1>{{ 'customer.reset_password.title' | t }}</h1>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-6">
			
			<p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>
			
			{% form 'reset_customer_password' %}
				{{ form.errors | default_errors }}
				
				<div class="form-group">
					<label for="ResetPassword" class="label--hidden">{{ 'customer.reset_password.password' | t }}</label>
					<input type="password" value="" name="customer[password]" id="ResetPassword" class="form-control" placeholder="{{ 'customer.reset_password.password' | t }}" {% if form.errors contains "password" %} class="error"{% endif %}>
				</div>
				<div class="form-group">
					<label for="PasswordConfirmation" class="label--hidden">{{ 'customer.reset_password.password_confirm' | t }}</label>
					<input type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation" class="form-control" placeholder="{{ 'customer.reset_password.password_confirm' | t }}" {% if form.errors contains "password_confirmation" %} class="error"{% endif %}>
				</div>
				<div class="form-group">
					<div>
					<input type="submit" class="btn" value="{{ 'customer.reset_password.submit' | t }}">
    				</div>
				</div>
			{% endform %}
		</div>
	</div>
</div>
