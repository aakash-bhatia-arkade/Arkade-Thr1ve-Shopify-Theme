<!-- Fresh Ready Collection Custom -->
<div class="fresh-ready-meals-collection">
	<div class="collection-group">
		<span class="anchor-offset" id="collection-lunchdinner"></span>
		<div class="container">
			<div class="row">
				<div class="col-sm-12">
					<h2>{{ collection.title }}</h2>
				</div>
			</div>
			<div class="cg-products">
				{% assign collection = collections.Beautifully-Balanced %}
			    <div class="row">
				    {% for product in collection.products %}
				    	{% include 'product-grid-item', productPerRow: settings.product_per_row %}
				    {% endfor %}
			    </div>
		    </div>
	    </div>
    </div>
</div>
