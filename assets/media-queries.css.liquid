@media(max-width:767px){.visible-desktop{display:none;}
.visible-small{display:block;}
.browser-warning-wrap{text-align:center;}
.css-browser-detection-text{width:100%;margin-bottom:15px;}
.css-browser-detection-text .browser-content{width:90%;display:inline-block;}
.css-browser-detection-text .browser-detection-close{width:6%;display:inline-block;text-align:right;vertical-align:top;}
.css-browser-detection-text .browser-detection-close img{max-width:100%;vertical-align:top;width:70%;}
.browsers-links{width:100%;margin-left:0;}
.browser-wrap a span{text-align:left;}
input[type='checkbox'] + label:after{top:4px;left:3px;}
.navbar-toggle{float:left;margin:5px 0 0 0;width:20%;}
.container > .navbar-header{margin-left:0;margin-right:0;}
.navbar-brand{padding-top:0;padding-bottom:0;width:60%;text-align:center;display:flex;justify-content:center;align-items:center;}
.navbar-brand > img{display:inline-block;margin-top:0;}
.navbar-nav > li > ul.dropdown-menu{border-top:0 none;padding:0 30px;}
.navbar-nav > li.thr1ve-home > ul.dropdown-menu{padding:0 30px;border-top:0 none;}
.navbar-nav > li > ul.dropdown-menu li,
.navbar-nav > li > ul.dropdown-menu li a,
.navbar-nav > li.thr1ve-home > ul.dropdown-menu li,
.navbar-nav > li.thr1ve-home > ul.dropdown-menu li > a{width:100%}
.navbar-nav > li.thr1ve-home > ul.dropdown-menu li{padding:0;}
.navbar-nav > li > ul.dropdown-menu li a,
.navbar-nav .open .dropdown-menu .dropdown-header,
.navbar-nav .open .dropdown-menu > li > a,
.navbar-nav > li.thr1ve-home > ul.dropdown-menu li > a{padding:10px 0;}
.header-cart-icon{width:20%;display:inline-block;margin:15px 0 0 0;text-align:right;}
.header-cart-icon i.fa{font-size:18px;}
.ajaxcart__footer .shipping-notice{padding-left:100px;}
.ajaxcart__product .ajaxcart__qty-adjust{padding:0;}
.ajaxcart__qty-num{padding:0;text-align:center;width:40px;}
input[type='checkbox'] + label:before{height:25px;width:25px;}
.btn:focus, .btn.focus, .btn:visited{background:#FFFFFF;border:0 none;color:#000000;outline:0;}
.left-btn{border-right:1px solid #dcdcdc;}
.css-ul-list li a{padding:25px 20px;font-size:20px}
.modal-header{padding:25px 20px;border-bottom-color:#000000;text-align:center;}
.modal-header button.close{font-size:38px;font-weight:normal;opacity:1;}
.modal-footer{text-align:center;padding:25px 20px;text-align:center;}
.collection-modal > .modal-wrap > .filter-wrap,
.collection-modal > .modal-wrap > #sort .css-ul-list li a{padding:25px 20px;}
.clear-filters{font-size:18px;}
.product-grid{width:50%;}
.custom-cart-attributes .terms{margin-bottom:10px;}
.postcode-validation{padding:15px 0;}
.postcode-validation .css-secondary-section{margin-top:15px;}
.postcode-validation .css-secondary-section .form-group{margin-right:0;width:100%;margin-bottom:10px;}
.postcode-validation .css-secondary-section .btn-primary{width:100%;}
.postcode-message{width:78%;}
.postcode-change-wrap{width:20%}
.product-image-wrap div.product-nutritional-info{display:block;}
}
@media(max-width:479px){.browser-detection-warning{padding-right:15px;padding-left:15px;}
.browser-warning-wrap{width:100%;margin:0;}
.browser-wrap{margin-right:0;width:49%;}
.browser-wrap.ie,
.browser-wrap.firefox{margin-bottom:10px;}
.css-browser-detection-text .browser-detection-close img{width:100%;}
.navbar-brand > img.logo-max-height{margin-top:10px;}
.postcode-validation .check-location{width:100%;}
.back-to-meal-plan-btn{text-align:center;}
#product{margin-bottom:10px;}
.product-grid{width:100%;}
.product-details{margin:15px 0;}
.ajaxcart__product .main-data{float:none;width:auto;margin-bottom:15px;font-size:16px;}
.ajaxcart__product .ajaxcart__qty{float:none;width:auto;text-align:left;}
#product-title{margin-bottom:0;}
#AddToCartForm{margin-bottom:20px;}
.css-qty-box{margin:15px 0;width:48%;display:inline-block;}
label.quantity-selector{margin-right:0;font-size:16px;width:100%;}
.js-qty{width:100%;}
#AddToCart{width:50%;padding:10px 15px;border:0 none;vertical-align:text-bottom;}
#slideInMenu.offside{width:100%;}
.recycle-box p{font-size:11px;}
.recycle-box p.title{font-size:12px;}
#footer .newsletter-section button{width:100%;}
#footer .newsletter-section button{margin-top:5px;}
#footer #footer-social{margin-top:20px;text-align:center;}
#footer-social li a{padding:0 15px;display:block;}
#footer-social li a .fa{font-size:2em;}
}
@media screen and (max-width:320px){.ajaxcart__product .main-data{font-size:14px;}
.ajaxcart__footer .shipping-notice{background-position-x:0;background-size:35%;font-size:12px;line-height:1.5;}
input[type='checkbox'] + label{font-size:12px;}
}
@media(min-width:768px) and (max-width:991px){.visible-desktop{display:none;}
.visible-small{display:block;}
.browser-warning-wrap{text-align:center;}
.css-browser-detection-text{width:100%;margin-bottom:10px;}
.css-browser-detection-text .browser-content{width:90%;display:inline-block;}
.css-browser-detection-text .browser-detection-close{width:6%;display:inline-block;text-align:right;vertical-align:top;}
.css-browser-detection-text .browser-detection-close img{max-width:100%;vertical-align:top;width:50%;}
.browsers-links{margin:0;width:100%;}
.browser-wrap a span{text-align:left;}
.call-out-container{text-align:center;}
#collection-view ul.list-inline{margin-bottom:0;margin-top:8px;text-align:right;}
#collection-view ul.list-inline li a{display:block;}
#collection-view ul.list-inline li i.fa{font-size:25px;}
.postcode-validation{margin-bottom:0;}
.postcode-validation .css-secondary-section .form-group{margin-right:0;width:100%;margin-bottom:5px;}
.postcode-validation .css-secondary-section .btn-primary{width:100%;}
.postcode-validation .banner-close a{line-height:6em;}
.postcode-message{width:78%;}
.postcode-change-wrap{width:20%}
.product-grid{text-align:center;}
.css-grid-qty-box,
.addtocart{width:100%;}
.css-grid-qty-box{text-align:center;}
.js-qty__num,
.ajaxcart__qty-num{width:80px;padding:5px 10px;text-align:center;}
.js-qty__adjust,
.ajaxcart__product .ajaxcart__qty-adjust{font-size:3em;}
.product-grid p{text-align:center;}
.product-image-wrap div.product-nutritional-info{display:block;}
#footer .newsletter-section .form-group,
#footer .newsletter-section input,
#footer .newsletter-section button{width:100%;}
#footer .newsletter-section button{margin-top:5px;}
}
@media(min-width:992px) and (max-width:1199px){.visible-desktop{display:none;}
.visible-small{display:block;}
.browser-warning-wrap{text-align:center;}
.css-browser-detection-text{width:100%;margin-bottom:10px;}
.css-browser-detection-text .browser-content{width:90%;display:inline-block;}
.css-browser-detection-text .browser-detection-close{width:6%;display:inline-block;text-align:right;vertical-align:top;}
.css-browser-detection-text .browser-detection-close img{max-width:100%;vertical-align:top;width:50%;}
.browsers-links{margin:0;width:100%;}
.browser-wrap a span{text-align:left;}
.call-out-container{text-align:center;}
.postcode-validation .css-secondary-section .form-group{margin-right:7px;}
.css-grid-qty-box,
.addtocart{width:100%;}
.css-grid-qty-box{text-align:center;}
.js-qty__num,
.ajaxcart__qty-num{width:80px;text-align:center;padding-left:0;}
}
@media(min-width:1200px){.visible-desktop{display:inline-block;}
.visible-small{display:none;}
.browser-detection-close img{max-width:100%;width:45%;}
.call-out-container{text-align:center;}
.product-image-wrap:hover > div.product-nutritional-info{transform:translate(0, 0%);}
.product-image-wrap:hover > div.product-tag-icons{transform:translate(0, -70px);}
}