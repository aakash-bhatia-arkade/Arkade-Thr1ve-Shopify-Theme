<!-- snippets/pagination-custom.liquid -->

<ul class="list-inline custom-pagination text-left">
	{% if paginate.previous %}
    	<li><a href="{{ paginate.previous.url }}" title="{{ paginate.previous.title }}">&larr; Previous</a></li>
	{% endif %}
	
	{% for part in paginate.parts %}
    	{% if part.is_link %}
			<li><a href="{{ part.url }}" title="">{{ part.title }}</a></li>
		{% else %}
			{% if part.title == paginate.current_page %}
				<li class="active"><span>{{ part.title }}</span></li>
			{% else %}
				<li><span>{{ part.title }}</span></li>
			{% endif %}
		{% endif %}
	{% endfor %}
	
	{% if paginate.next %}
    	<li><a href="{{ paginate.next.url }}" title="{{ paginate.next.title }}">Next &rarr;</a></li>
	{% endif %}
</ul>